  <body>
    <div class="wrapper">

      <header class="header">        
        <a class="header__logo-link" href="/">
          <img  class="header__logo-image" src="/img/logo.png" alt="Meadowlark Travel Logo">
        </a>        
      
        <div id="basket-icon" class="basket-icon">
          <i class="basket-icon__icon fas fa-shopping-cart"></i>
          <div class="basket-icon__circle">
            <span class="count"></span>
          </div>
        </div>

        <div id="basket" class="basket">
          <p class="basket__subtitle">basket</p>
          <div id="basket-items"></div>
          <button id="btnClear" class="basket__btn-clear">empty trash</button>
         
          <!--TODO--> 
          <form id="orderForm" class="basket__form basket-form">
            <label class="basket-form__label" for="customerName">Name:</label>
            <input class="basket-form__input" type="text" id="customerName" name="customerName" required><br>
            <label class="basket-form__label" for="customerPhone">Email:</label>
            <input class="basket-form__input" type="email" id="customerEmail" name="customerEmail" required><br>
            <button class="basket-form__btn" type="button" id="btnCheckout">checkout</button>
          </form>
